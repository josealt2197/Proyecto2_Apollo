
@{
    ViewBag.Title = "Forgot Password";
}

<h2>Restablecer Contraseña</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                @ViewBag.Message
            </div>
        }
        <h4>Digite su Correo Electrónico.</h4>
        <h4>A este le serán enviadas las instrucciones <br />para cambiar su contraseña.</h4>
        <br />
        <center>
            <div class="form-group">
                <div class="col-md-12">
                    @*<label class="control-label col-md-2">Correo Electrónico</label>*@
                    @Html.TextBox("Email", "", new { @class = "form-control", @placeholder = "Correo Electrónico" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
        </center>
    </div>
}