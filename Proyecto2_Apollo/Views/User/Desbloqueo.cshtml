@{
    ViewBag.Title = "Desbloqueo";
}


@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <h2>Cuenta Desbloqueada</h2>

        <hr />

        <div class="alert alert-success">
            @ViewBag.Message
        </div>
        <center><a href="Login"><img src="~/Content/Images/unblock.png" width="256px" heigth="256px" class="text-center" alt="User" /></a></center>
        <h4>
            Te recomendamos cambiar la contraseña, accede mediante el link de abajo.
        </h4>

        <div class="enlace">
            @Html.ActionLink("Cambiar tu contraseña", "ForgotPassword", "User")
        </div>
    }
}
else
{
    <h2>Desbloquear Cuenta</h2>
    <hr />


    if (ViewBag.ErrorMsg != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMsg
        </div>

    }
    
    using (Html.BeginForm())
    {
        <h4>
            Un último paso antes de activar tu cuenta nuevamente. Por favor digita la información que solicitada.
        </h4> <br><br>
        <h4>
            Digita tu número telefónico
        </h4>
        <center>
            <div style="display:none;">
                @Html.TextBox("id", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.User } })
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBox("answer", "", new { @class = "form-control", @placeholder = "Respuesta" })
                </div>
            </div>
        </center>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Validar" class="btn btn-primary" />
            </div>
        </div>

    }

}
