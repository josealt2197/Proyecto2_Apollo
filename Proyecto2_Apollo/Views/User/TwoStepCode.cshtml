@model Proyecto2_Apollo.Models.TwoStepCodeModel

@{
    ViewBag.Title = "TwoStepCode";
}

<h2>Verificación de Dos Pasos</h2>
<hr />

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}
else
{
    <div class="alert alert-info">
        Un código de ingreso ha sido enviado a tu <strong>Correo Electrónico.</strong><br />
        Digita este codigo en el espacio de abajo para poder continuar.
    </div>

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 
        
        <center>
            <h4>Código de Acceso</h4>
            <br />
            <div class="form-group">
                @*@Html.LabelFor(model => model.codes, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-12">
                    @Html.EditorFor(model => model.codes, new { htmlAttributes = new { @class = "form-control", placeholder = "Código de Acceso" } })
                    @Html.ValidationMessageFor(model => model.codes, "", new { @class = "text-danger" })
                </div>
            </div>
        </center>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="enlace">
    @Html.ActionLink("Regresar al inicio", "Login", "User")
</div>
